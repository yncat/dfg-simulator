    "dist"
  ],
  "bugs": {
    "url": "https://github.com/yncat/dfg-simulator/issues"
  },
  "homepage": "https://github.com/yncat/dfg-simulator#readme",
  "dependencies": {
    "@types/jest": "^26.0.22",
    "jest": "^26.6.3",
    "prettier": "^2.2.1",
    "ts-jest": "^26.5.4",
    "ts-node": "^9.1.1",
    "typescript": "^4.2.4"
  }
